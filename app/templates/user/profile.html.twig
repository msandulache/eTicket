{% extends 'base.html.twig' %}

{% block title %}Hello UserController!{% endblock %}

{% block body %}


    <div class="grid grid-cols-5 grid-rows-5 gap-4">
        <div class="col-span-2">2</div>
        <div class="col-span-3 col-start-3">6</div>
    </div>
    <div class="overflow-hidden bg-white py-24 sm:py-32">

        <div class="mx-auto max-w-7xl px-6 lg:px-8">




            <div class="mx-auto grid max-w-2xl grid-cols-1 gap-x-8 gap-y-16 sm:gap-y-20 lg:mx-0 lg:max-w-none lg:grid-cols-2">

                <div>
                    <div class="lg:max-w-lg">
                        <p class="mt-2 text-2xl font-bold tracking-tight text-indigo-600 sm:text-2xl pb-6">Contul
                            meu</p>
                        <ul role="list" class="divide-y divide-gray-100">
                            <li class="flex justify-between gap-x-6">
                                <div class="flex min-w-0 gap-x-4">
                                    <div class="min-w-0 flex-auto">
                                        <p class="text-sm font-semibold leading-6 text-gray-900 py-3"><a
                                                    href="{{ path('app_user_profile') }}">Date personale</a></p>
                                    </div>
                                </div>
                            </li>
                            <li class="flex justify-between gap-x-6">
                                <div class="flex min-w-0 gap-x-4">
                                    <div class="min-w-0 flex-auto">
                                        <p class="text-sm font-semibold leading-6 text-gray-900 py-3">Rezervarile
                                            mele</p>
                                    </div>
                                </div>
                            </li>
                            <li class="flex justify-between gap-x-6">
                                <div class="flex min-w-0 gap-x-4">
                                    <div class="min-w-0 flex-auto">
                                        <p class="text-sm font-semibold leading-6 text-gray-900 py-3">Biletele mele</p>
                                    </div>
                                </div>
                            </li>
                            <li class="flex justify-between gap-x-6">
                                <div class="flex min-w-0 gap-x-4">
                                    <div class="min-w-0 flex-auto">
                                        <p class="text-sm font-semibold leading-6 text-gray-900 py-3">Puncte Fidelizare
                                            TODO</p>
                                    </div>
                                </div>
                            </li>
                            <li class="flex justify-between gap-x-6">
                                <div class="flex min-w-0 gap-x-4">
                                    <div class="min-w-0 flex-auto">
                                        <p class="text-sm font-semibold leading-6 text-gray-900 py-3">Schimba parola</p>
                                    </div>
                                </div>
                            </li>
                            <li class="flex justify-between gap-x-6">
                                <div class="flex min-w-0 gap-x-4">
                                    <div class="min-w-0 flex-auto">
                                        <p class="text-sm font-semibold leading-6 text-gray-900 py-3"><a
                                                    href="{{ path('app_logout') }}">Iesire din
                                                cont</a> {{ path('app_forgot_password_request') }}</p>
                                    </div>
                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="lg:pr-8 lg:pt-4">
                    {% for message in app.flashes('success') %}
                        <div class="flash-notice">
                            <p class="mt-2 font-bold tracking-tight text-indigo-600 pb-6">{{ message }}</p>
                        </div>
                    {% endfor %}

                    {{ form_errors(userProfileForm) }}
                    {{ form_start(userProfileForm) }}

                    <div class="space-y-12">
                        <div class="border-b border-gray-900/10 pb-12">
                            <p class="mt-2 text-2xl font-bold tracking-tight text-gray-900 sm:text-2xl">Informatii
                                personale</p>
                            <div class="mt-10 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-6">
                                <div class="sm:col-span-4">
                                    <div class="mt-2">
                                        {{ form_row(userProfileForm.firstname, {'label': 'Prenume', 'label_attr':{'class' : 'block text-sm font-medium leading-6 text-gray-900'}, 'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'}}) }}
                                    </div>
                                </div>

                                <div class="sm:col-span-4">
                                    <div class="mt-2">
                                        {{ form_row(userProfileForm.lastname, {'label': 'Nume de familie', 'label_attr':{'class' : 'block text-sm font-medium leading-6 text-gray-900'}, 'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'}}) }}
                                    </div>
                                </div>

                                <div class="sm:col-span-4">
                                    <div class="mt-2">
                                        {{ form_row(userProfileForm.email, {'label': 'Adresa de e-mail', 'label_attr':{'class' : 'block text-sm font-medium leading-6 text-gray-900'}, 'attr': {'class': 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6'}}) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-6 flex items-center justify-end gap-x-6">
                        <button type="submit"
                                class="rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">
                            Salveaza
                        </button>
                    </div>

                    {{ form_end(userProfileForm) }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
